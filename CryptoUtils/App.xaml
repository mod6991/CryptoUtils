<Application
    x:Class="CryptoUtils.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="using:CryptoUtils.Helpers"
    xmlns:local="using:CryptoUtils">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->

            <helpers:BoolInvertConverter x:Key="BoolInvertConverter" />
            <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" Invert="False" />
            <helpers:BoolToVisibilityConverter x:Key="BoolInvertToVisibilityConverter" Invert="True" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
