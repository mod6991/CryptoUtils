<Page
    x:Class="CryptoUtils.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <NavigationView IsBackButtonVisible="Collapsed" x:Name="NavView" Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="RSA key pair generation" Icon="Permissions" Tag="rsa"
                                ToolTipService.ToolTip="RSA key pair generation"/>

            <NavigationViewItem Content="Encrypt-Decrypt with key" Icon="ProtectedDocument" Tag="key"
                                ToolTipService.ToolTip="Encrypt-Decrypt with key"/>

            <NavigationViewItem Content="Encrypt-Decrypt with password" Icon="ProtectedDocument" Tag="pass"
                                ToolTipService.ToolTip="Encrypt-Decrypt with password"/>

            <NavigationViewItem Content="Hash" Icon="TwoPage" Tag="hash"
                                ToolTipService.ToolTip="Hash"/>
        </NavigationView.MenuItems>

        <Frame x:Name="ContentFrame" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" />
    </NavigationView>
</Page>
