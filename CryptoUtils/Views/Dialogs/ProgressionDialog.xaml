<ContentDialog
    x:Class="CryptoUtils.Views.Dialogs.ProgressionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="using:CryptoUtils.Helpers"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ContentDialog.Resources>
        <helpers:PercentConverter x:Key="PercentConverter" />
    </ContentDialog.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ProgressRing Grid.Row="0" Width="128" Height="128" IsIndeterminate="{x:Bind IsIndeterminate, Mode=OneWay}" Value="{x:Bind ProgressValue, Mode=OneWay}" />
        <TextBlock Grid.Row="0" Text="{x:Bind ProgressValue, Converter={StaticResource PercentConverter}, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <TextBlock Grid.Row="1" Text="{x:Bind ProgressText, Mode=OneWay}" TextWrapping="Wrap" Margin="10" />
    </Grid>

</ContentDialog>
