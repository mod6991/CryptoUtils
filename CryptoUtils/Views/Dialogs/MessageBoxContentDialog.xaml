<ContentDialog
    x:Class="CryptoUtils.Views.Dialogs.MessageBoxContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    PrimaryButtonText="Ok"
    DefaultButton="Primary">

    <ContentDialog.Resources>
        
    </ContentDialog.Resources>
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Path Grid.Column="0" Fill="Orange" Width="32" Height="32" Stretch="Uniform" Margin="10"
              Data="M11,15H13V17H11V15M11,7H13V13H11V7M12,2C6.47,2 2,6.5 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20Z">
        </Path>
        <TextBlock Grid.Column="1" Margin="10" Text="{x:Bind Message}" TextWrapping="Wrap" VerticalAlignment="Center" />
    </Grid>
</ContentDialog>
